# ===========================================
# Personal Knowledge Management System
# Environment Configuration Template
# ===========================================

# ===========================================
# Database Configuration
# ===========================================
# Using PostgreSQL 17
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=knowledge_db
DATABASE_USER=postgres
DATABASE_PASSWORD=your_postgres_password
DATABASE_HOST=localhost
DATABASE_PORT=5432

# Or use DATABASE_URL (alternative)
# DATABASE_URL=postgresql://postgres:your_password@localhost:5432/knowledge_db

# ===========================================
# Django Settings
# ===========================================
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ===========================================
# CORS Settings
# ===========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ===========================================
# JWT Settings
# ===========================================
JWT_ACCESS_TOKEN_LIFETIME=minutes=30
JWT_REFRESH_TOKEN_LIFETIME=days=7
JWT_ALGORITHM=HS256

# ===========================================
# Internationalization
# ===========================================
TIME_ZONE=Asia/Shanghai
USE_TZ=True
LANGUAGE_CODE=zh-hans

# ===========================================
# File Upload Settings
# ===========================================
MEDIA_URL=/media/
MEDIA_ROOT=backend/media

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO
